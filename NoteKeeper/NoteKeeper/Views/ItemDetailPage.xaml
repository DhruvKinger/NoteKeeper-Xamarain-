<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoteKeeper.Views.ItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <!--<Label Text="Course:" FontSize="Medium" />-->
        <Picker x:Name="NoteCourse" Title="Note Course" FontSize="Medium">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>First</x:String>
                    <x:String>Second</x:String>
                    <x:String>Third</x:String>
                </x:Array>
                
            </Picker.ItemsSource>
            
        </Picker>
        <!--<Label Text="Heading:" FontSize="Medium"/>-->
        <Entry x:Name="NoteHeading" Placeholder="Note Heading" FontSize="Medium"/>
        
        <!--<Label Text="Text:" FontSize="Medium" />-->
        <Editor x:Name="NoteText" Placeholder="Note Text" AutoSize="TextChanges" FontSize="Medium"/>

    </StackLayout>
</ContentPage>